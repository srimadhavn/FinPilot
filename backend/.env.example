# Environment variables for FinPilot Backend
# Copy this file to .env and update with your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://finpilot_user:finpilot_password@localhost:5432/finpilot_db
POSTGRES_DB=finpilot_db
POSTGRES_USER=finpilot_user
POSTGRES_PASSWORD=finpilot_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# LLaMA 3 Configuration
LLAMA_PROVIDER=mock
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OLLAMA_BASE_URL=http://localhost:11434

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
